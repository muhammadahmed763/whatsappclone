<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/c"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/person"
            android:id="@+id/userImage"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toTopOf="@+id/c"
        app:layout_constraintBottom_toBottomOf="@id/c"
        app:layout_constraintStart_toEndOf="@id/c"
        app:layout_constraintBottom_toTopOf="@id/lastmessage"
        android:textSize="@dimen/_12ssp"
        android:text="Ahmed"
        android:layout_marginStart="@dimen/_20sdp"/>
    <ImageView
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:src="@drawable/messagecheck"
        app:layout_constraintTop_toTopOf="@id/lastmessage"
        app:layout_constraintBottom_toBottomOf="@id/lastmessage"
        app:layout_constraintStart_toStartOf="@id/name"
        android:id="@+id/checkMessage"/>
    <TextView
        android:id="@+id/lastmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        app:layout_goneMarginStart="@dimen/_4sdp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@id/c"
        app:layout_constraintStart_toEndOf="@id/checkMessage"
        android:padding="0dp"
        android:textSize="@dimen/_10ssp"
        android:text="Ahmed"
        android:layout_marginStart="@dimen/_6sdp"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textsmoothcolor"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toTopOf="@+id/name"
       app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_20sdp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".status.fragment.activity.Status">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_44sdp"
            app:cardCornerRadius="@dimen/_22sdp"
            android:id="@+id/card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/currentUserImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@+id/card"
            app:layout_constraintEnd_toEndOf="@+id/card">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/_9sdp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_2sdp"
                    android:background="@color/greenreal"
                    android:src="@drawable/add" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:text="My Status"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toTopOf="@id/addstatusText"
            android:id="@+id/mystatusText"
            app:layout_constraintTop_toTopOf="@+id/card"
            app:layout_constraintStart_toEndOf="@id/card"
            android:layout_marginStart="@dimen/_20sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="@color/textsmoothcolor"
            android:text="Tab to add status"
            android:textSize="@dimen/_10ssp"
            android:id="@+id/addstatusText"
            app:layout_constraintTop_toBottomOf="@id/mystatusText"
            app:layout_constraintStart_toStartOf="@id/mystatusText"
            app:layout_constraintBottom_toBottomOf="@id/card"/>
        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/textsmoothcolor"
            android:text="Recent updates"
            android:id="@+id/recentText"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintTop_toBottomOf="@id/card"
            app:layout_constraintStart_toStartOf="@id/card"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recylerview"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recentText"/>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:backgroundTint="@color/greenreal"
            android:id="@+id/addStatusBtn"
            app:cardCornerRadius="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:layout_height="match_parent"
                android:src="@drawable/camera"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"
            android:id="@+id/typesStatus"
            app:cardBackgroundColor="@color/bottomsheetview"
            app:cardCornerRadius="@dimen/_17sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:layout_constraintBottom_toTopOf="@id/addStatusBtn"
            app:layout_constraintEnd_toEndOf="@id/addStatusBtn"
            app:layout_constraintStart_toStartOf="@id/addStatusBtn">
            <ImageView
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:layout_height="match_parent"
                android:src="@drawable/create"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>